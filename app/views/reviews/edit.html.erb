<div class="main-page-body">

<h2> Edit your Review </h2>

    <%= form_for @review do |r| %>

<div class="form-group">
    <p> Your Rating (out of 5): <p>
    <%= r.range_field :productRating, :value => @review.productRating, :min => 0, :max => 5, :class=>"form-control-range" %>
</div>

<div class="form-group">
    <p> Your Review: <p>
    <%= r.text_area :reviewText, :value => @review.reviewText %>
</div>

<%= r.hidden_field :product_id, :value => @review.product_id %>

<div class="form-group">
    <%= r.submit "Update Review", :class => "btn btn-success" %>
    <%= link_to  "Cancel", products_path, class: "btn btn-default" %>
</div>
<% end %>

</div>