<h1>Write a new review</h1>
<p>Fill out the form below:</p>

<%= form_for :review, url: reviews_path do |r| %>

<div class="form-group">
    <%= r.label :productRating %>
    <%= r.range_field :productRating, :min => 0, :max => 5, :class=>"form-control-range" %>
</div>

<div class="form-group">
    <%= r.label :reviewText %>
    <%= r.text_field :reviewText %>
</div>

<%= r.hidden_field :product_id, :value => params[:product_id]%>

<div class="form-group">
    <%= r.submit "Post Review", :class => "btn btn-success" %>
    <%= link_to  "Cancel", products_path, class: "btn btn-default" %>
</div>
<% end %>