<div class="main-page-body">
    <h2> Create a Profile </h2>
    <%= form_for :profile, url: profiles_path do |f| %>
        <div class="form-group">
            <%= f.text_field :fullName, placeholder: 'Your Full Name', class: 'form-control' %>
        </div>
        <br>
        <div class="form-group">
            <%= f.date_field :DoB, class: 'form-control' %>
        </div>
        <br>
        <div class="form-group">
            <%= f.text_field :address, placeholder: 'Full Address', class: 'form-control' %>
        </div>
        <br>
        <div class="form-group">
            <%= f.text_field :city, placeholder: 'City/Town', class: 'form-control' %>
        </div>
        <br>
        <div class="form-group">
            <%= f.text_field :country, placeholder: 'Country', class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.file_field :profileImg, accept: "image/png,image/jpeg"%>  
        </div>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <br>
        <%= f.submit 'Create Profile', class:"btn btn-primary" %>
        <%= link_to  "Cancel", products_path, class: "btn btn-danger" %>
    <% end %>
</div>