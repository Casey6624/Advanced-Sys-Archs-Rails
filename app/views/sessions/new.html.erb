<div class="main-page-body">

<h2>Login | <span class="fancy-text-highlight">Electroniks</span> </h2>

<%= form_tag sessions_path do %>

<%= text_field_tag :username, nil, placeholder: 'Enter Your Username', class: 'form-control' %>
<br>
<%= password_field_tag :password, nil, placeholder: 'Enter Your Password', class: 'form-control' %>
<%= submit_tag 'Log In', class:"btn btn-success" %>
 <%= link_to "Cancel", root_path, {:class => "btn btn-danger"} %>
<% end %>
</div>