        <%= link_to "Home", "/" %>
      </li>
      <li class="nav-item nav-link">
        <%= link_to "Products", "/products" %>
      </li>
      <li class="nav-item nav-link">
        <%= link_to "About Us", "/aboutus" %>
      </li>
      <li class="nav-item nav-link">
        <%= link_to "Contact Us", "/contactus" %>
      </li>
    </ul>
    </div>

    <div class="col-sm-6" id="bottom-nav-links">
      <li class="bottom-nav-title-container">
        <h4 class="bottom-nav-title"> ACCOUNT OPTIONS </h4>
      </li>
      <div class="side-by-side-flex">
              <li class="nav-item nav-link">
      <%= link_to "Create Account", "/users/new" %>
      </li>
        <li class="nav-item nav-link">
        <% if current_user %>
          <%= link_to "Log Out", "/sessions/destroy" %>
        <% end %>
        </li>
        <li class="nav-item nav-link">
        <%= link_to "Log In", "/sessions/new" %>
        </li>
      </div>
      <div class="side-by-side-flex">
      <li class="nav-item nav-link">
      <%= link_to "View My Reviews", "/users/new" %>
      </li>
      <li class="nav-item nav-link">
      <%= link_to "View My Profile", "/profiles/show" %>
      <% if current_user %>
        <%= link_to "View Profile", "#{profiles_path}/#{session[:userid]}" %>
      <% end %>
      </li>
      <li class="nav-item nav-link">
      <% if current_user %>
        <%= link_to "Edit My Profile", edit_profile_path(:id => session[:userid]) %>
      <% end %>
      </li>
