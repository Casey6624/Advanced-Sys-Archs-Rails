<!DOCTYPE html>
<html>
  <head>
    <title>Electroniks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
        <script src="https://kit.fontawesome.com/6f1c2e5634.js" crossorigin="anonymous"></script>
  </head>

  <body>

  <nav class="navbar navbar-dark bg-dark" >
      <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Account
    </a>
    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
    <% if current_user == false %>
      <%= link_to "Create Account", "/users/new", class:"dropdown-item" %>
      <%= link_to "Log In", "/sessions/new", class:"dropdown-item" %>
      <% end %>
      <% if current_user %>
        <%= link_to "Log Out", "/sessions/destroy", class:"dropdown-item" %>
      <%= link_to "View My Reviews", "/users/new", class:"dropdown-item" %>
      <%= link_to "View My Profile", "/profiles/show", class:"dropdown-item" %>
      <%= link_to "Edit My Profile", edit_profile_path(:id => session[:userid]), class:"dropdown-item" %>
      <% end %>
    </div>
  </li>
  <li class="nav-item nav-link">
    <a id="nav-username"> <%= session[:username] %> </a>
  </li>
  </nav>

  <div class="logoContrainer">
    <%= image_tag "logo.jpg" %>
  </div>
