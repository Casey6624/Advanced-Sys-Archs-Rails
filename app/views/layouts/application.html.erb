    <%= link_to "Home", "/" %>
  </li>
  <li class="nav-item nav-link">
    <%= link_to "Products", "/products" %>
  </li>
  <li class="nav-item nav-link">
    <%= link_to "Community", "/profiles" %>
  </li>
  <li class="nav-item nav-link">
    <%= link_to "About Us", "/aboutus" %>
  </li>
  <li class="nav-item nav-link">
    <%= link_to "Contact Us", "/contactus" %>
  </li>

</nav>

  <%= yield %>
  <nav class="navbar navbar-dark bg-dark" id="bottom-nav">
